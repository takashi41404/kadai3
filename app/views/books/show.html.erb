<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
    　　　  　　<tr>
	            <th>introduction</th>
	            <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <a>
          <%= link_to "Edit", edit_user_path(@user), method: :get %>
        </a>



        <h2 class="mt-3">New book</h2>
        <%= form_with model: @book do |f| %>
          <div class="form-group">
            <label for="book_title">Title</label> <br>
            <%= f.text_field :title %>
          </div>
          <div class="form-group">
           <label for="book_opinion">Opinion</label> <br>
              <%= f.text_area :body %>
          </div>
          <div class="form-group">
            <%= f.submit 'Create Book' %>
          </div>
        <% end %>
    </div>

    <div class="col-md-8">
  		<h2>Book detail</h2>
  		<table class="table">
  		  <tbody>
  		    <tr>
            <td><%= image_tag @book.get_image %>
            </td>
            <td><%= @book.title %></td>
            <td><%= @book.body %></td>
            <% if @book.user == current_user %>
              <td><%= link_to "Destroy", book_path(book), method: :delete %></td>
              <td><%= link_to "Edit", edit_book_path(book), method: :get %> </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

