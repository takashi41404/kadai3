<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
        <table class="table">
          <tbody>
            <tr>
              <%= image_tag @user.get_profile_image(100, 100) %>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
    　　　  　　<tr>
	            <th>introduction</th>
	            <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div>
          <%= link_to edit_user_path(@user), class: 'btn btn-outline-secondary btn-block' do %>
            <i class="fas fa-user-cog"></i>
          <% end %>
        </div>



        <h2 class="mt-3">New book</h2>
        <%= form_with model: @book do |f| %>
          <div class="form-group">
            <label for="book_title">Title</label> <br>
            <%= f.text_field :title %>
          </div>
          <div class="form-group">
           <label for="book_opinion">Opinion</label> <br>
              <%= f.text_area :body %>
          </div>
          <div class="form-group">
            <%= f.submit 'Create Book' %>
          </div>
        <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
  		<h2>Users</h2>
  		<table class="table">
  		  <thead>
  		    <tr>
  		      <th>image</th>
  		      <th>name</th>
  		      <th colspan="3"></th>
  		    </tr>
  		  </thead>
  		  <tbody>
  		    <% @users.each do |user| %>
  		    <tr>
            <td><%= image_tag user.get_profile_image(100, 100) %>
            </td>
            <td><%= user.name %></td>
            <td><%= link_to "Show", user_path(user), method: :get %> </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

